<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eveningoutpost.dexdrip.utils.DisplayQRCode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Use QR codes to transfer settings using Settings->Auto Configure feature"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="closeNow"
        android:src="@android:drawable/ic_delete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show General and Collection Settings"
        android:id="@+id/buttongeneral"
        android:layout_marginTop="112dp"
        android:layout_below="@+id/title"
        android:onClick="connectionSettings"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Alarm Settings"
        android:id="@+id/buttonalarms"
        android:onClick="alarmSettings"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xDrip Plus Security Key Settings only"
        android:id="@+id/buttonsecurity"
        android:onClick="xdripPlusSyncSettings"
        android:layout_below="@+id/buttonalarms"
        android:layout_alignEnd="@+id/buttongeneral"
        android:layout_marginTop="53dp" />
</RelativeLayout>
